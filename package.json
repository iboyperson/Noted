{
  "name": "noted",
  "version": "0.1.0",
  "description": "A notetaking app",
  "homepage": "https://github.com/iboyperson/Noted",
  "author": {
    "name": "iboyperson",
    "email": "tjquillan@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/iboyperson/Noted"
  },
  "build": {
    "appId": "com.iboyperson.noted",
    "productName": "Noted",
    "directories": {
      "output": "releases"
    },
    "extraResources": [
      {
        "from": "node_modules/vickymd/theme",
        "to": "styles/theme",
        "filter": [
          "**/*.css"
        ]
      },
      {
        "from": "node_modules/emoji-assets/png",
        "to": "emoji",
        "filter": [
          "**/*.png"
        ]
      }
    ],
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "afterAllArtifactBuild": "./build/afterAllArtifactBuildHook.js"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps && yarn deduplicate",
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "lint": "eslint --ext .ts --ext .tsx --ext .js ./src --fix",
    "format": "prettier --write src",
    "index": "cti ./src/renderer/components/*/",
    "deduplicate": "yarn-deduplicate yarn.lock"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@mdi/font": "5.3.45",
    "chokidar": "3.4.0",
    "platform-folders": "0.5.1",
    "prismjs": "1.20.0",
    "source-map-support": "0.5.19"
  },
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@babel/preset-react": "7.9.4",
    "@material-ui/core": "4.11.0",
    "@material-ui/icons": "4.9.1",
    "@material-ui/lab": "4.0.0-alpha.56",
    "@types/codemirror": "0.0.97",
    "@types/echarts": "4.6.3",
    "@types/katex": "0.11.0",
    "@types/markdown-it": "10.0.1",
    "@types/mermaid": "8.2.1",
    "@types/node": "12.12.37",
    "@types/overlayscrollbars": "1.12.0",
    "@types/prismjs": "1.16.1",
    "@types/react": "16.9.43",
    "@types/react-dom": "16.9.8",
    "@types/yamljs": "0.2.31",
    "@typescript-eslint/eslint-plugin": "3.6.1",
    "@typescript-eslint/parser": "3.6.1",
    "clsx": "1.1.1",
    "codemirror": "5.55.0",
    "copy-webpack-plugin": "6.0.3",
    "create-ts-index": "1.13.3",
    "echarts": "4.8.0",
    "electron": "9.1.0",
    "electron-builder": "22.7.0",
    "electron-store": "5.2.0",
    "electron-updater": "4.3.1",
    "electron-webpack": "2.8.2",
    "electron-webpack-eslint": "6.0.0",
    "electron-webpack-ts": "4.0.1",
    "emoji-assets": "6.0.0",
    "emoji-toolkit": "6.0.0",
    "eslint": "7.4.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.3",
    "eslint-plugin-react-hooks": "4.0.8",
    "husky": "4.2.5",
    "katex": "0.12.0",
    "lint-staged": "10.2.11",
    "marked": "1.1.1",
    "mermaid": "8.6.0",
    "node-sass": "4.14.1",
    "overlayscrollbars": "1.12.0",
    "overlayscrollbars-react": "0.2.2",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-icons": "3.10.0",
    "rimraf": "3.0.2",
    "sass-loader": "9.0.2",
    "typescript": "3.9.6",
    "vickymd": "0.2.5",
    "webpack": "4.43.0",
    "yamljs": "0.3.0",
    "yarn-deduplicate": "2.1.1"
  }
}
